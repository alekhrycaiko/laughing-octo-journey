{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "argocd": {
    "enabled": true,
    "fileMatch": ["\\.yaml$"]
  },
  "packageRules": [
    {
      "matchFiles": ["**/*.tf"],
      "packageNames": ["hashicorp/terraform"],
      "separateMajorMinor": true,
      "separateMinorPatch": true,
      "groupName": "Terraform dependencies",
      "groupSlug": "terraform",
      "fileMatch": [
        "^environments/test1/.*\\.tf$",
        "^environments/test2/.*\\.tf$",
        "^environments/test3/.*\\.tf$"
      ]
    }
  ]
}
